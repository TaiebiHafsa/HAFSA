<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="355.0" prefWidth="466.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.fstt.trackingl.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Nom :" />
      <TextField fx:id="nom"/>
      <Label text="Telephone"  />
      <TextField fx:id="tele"/>
      <Button mnemonicParsing="false" text="Save" fx:id="ok"  onAction="#onSaveButtonClick" />
      <TableView prefHeight="200.0" prefWidth="200.0" fx:id="mytable">
        <columns>
          <TableColumn prefWidth="75.0" text="id" fx:id="col_id"/>
          <TableColumn prefWidth="75.0" text="nom" fx:id="col_nom"/>
            <TableColumn prefWidth="75.0" text="telephone" fx:id="col_tele"/>
        </columns>
      </TableView>
   </children>

 
</VBox>
